<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="215.0" prefWidth="342.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bookadd.Controllers.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
    <VBox alignment="CENTER" spacing="10">
        <TextField fx:id="titleField" promptText="Введите название книги" />
        <TextField fx:id="authorField" promptText="Введите автора книги" />
        <TextField fx:id="descriptionField" promptText="Введите описание книги" />
        <TextField fx:id="genreField" promptText="Введите жанр книги" />
        <TextField fx:id="priceField" promptText="Введите стоимость книги" />
        <Button text="Добавить книгу" onAction="#onAddBookButtonClick" />
    </VBox>

    <Accordion />
</VBox>
